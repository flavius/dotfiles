# Available snippets:
#   gmail-account
#   imap-account
# Do not forget to append your account to the comma-sepparated list
#   accounts =
# below.
# The account name will be used to generate paths, so remember it, as it will
# be used in other email-related configurations as well.
[general]
metadata = ~/.cache/offlineimap
accounts = 
maxsyncaccounts = 2
socktimeout = 60
ui = TTY.TTYUI
fsync = true

[mbnames]
enabled = yes
filename = ~/.mutt/mailboxes.muttrc
header = "mailboxes "
peritem = "+%(accountname)s/%(foldername)s"
sep = " "
footer = "\n"

