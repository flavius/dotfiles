snippet gmail "Define a gmail account" !b
account default-gmail # remove if duplicate
    host smtp.gmail.com
    port 587
    protocol smtp
    auth on
    tls on
    tls_starttls on
    tls_trust_file /etc/ssl/certs/ca-certificates.crt

account ${1:gmailusername} : default-gmail
    from $1@gmail.com
    user $1@gmail.com
endsnippet
