snippet gmail "Define a gmail account" !b
defaults
    host smtp.gmail.com
    port 587
    protocol smtp
    auth on
    tls on
    tls_starttls on
    tls_trust_file /etc/ssl/certs/ca-certificates.crt

account ${1:gmailusername}
    from $1@gmail.com
    user $1@gmail.com

account default : $1

endsnippet
